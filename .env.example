# Application
NODE_ENV=development
PORT=5000

# Database
# Internal Docker networking URL (used within Docker containers)
DATABASE_URL=postgres://postgres:postgres@postgres:5432/musician_management

# External access URL (for connecting from your local machine)
LOCAL_DATABASE_URL=postgres://postgres:postgres@localhost:5433/musician_management

# PostgreSQL configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=musician_management
PGHOST=postgres
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=musician_management

# Internal port (used within Docker)
PGPORT=5432
# External port (mapped to host machine)
POSTGRES_EXTERNAL_PORT=5433

# Email
SENDGRID_API_KEY=your_sendgrid_key_here